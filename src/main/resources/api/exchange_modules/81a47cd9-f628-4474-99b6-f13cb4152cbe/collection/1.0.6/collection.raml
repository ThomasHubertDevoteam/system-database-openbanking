      is: [errorResponse]
      body:
        application/json:
          example: <<exampleBodyPost>>
      responses:
        201:
          body:
            application/json:
              example: {"Message":"Added"}

  put_and_read:
    get:
      is: [errorResponse]
      responses:
        200:
          body:
            application/json:
              example: <<exampleRead>>
    put:
      is: [errorResponse]
      body:
        application/json:
          example: <<exampleBodyPut>>
      responses:
        201:
          body:
            application/json:
              example: {"Message":"Updated"}

  delete_and_read:
    get:
      is: [errorResponse]
      responses:
        200:
          body:
            application/json:
              example: <<exampleRead>>
    delete:
      is: [errorResponse]
      responses:
        200:
          body:
            application/json:
              examples:
                message: {"Resource Deleted":<<exampleDeleted>>} 

  del_crea_read:
    get:
      is: [errorResponse]
      responses:
        200:
          body:
            application/json:
              example: <<exampleRead>>
